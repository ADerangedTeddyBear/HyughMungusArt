@{
    Layout = "~/Views/Shared/_GeneralTemplate.cshtml";
}
@model ArtPortfolioASPEdition.Models.ContactDetails;

<head>
    <title>Home</title>
    <style>
    .carousel-inner img {
        max-width: 1500px;
        height: 300px;
    }
    </style>
</head>

<h2>Welcome to the Huyugh Mungus Art Portfolio</h2>

<div class="container" style="margin-top:30px" >
    <div class="row">
        <div class="col-sm-4">
            <h2>About Me</h2>
            <h5>Background Information:</h5>
            <p>
                I'm a college student learning web development and digital painting. I created this site to practice my web development skills and create a platform for me to show my works
                in the field of digital painting. <br />

                In the past I had been drawing using just pencil and paper. On May 2019, I decided to experiment with digital painting. I started off using a Galaxy Note 3 as a drawing tablet
                and used VirtualTablet to connect it to my PC. The early works on this site were drawn with a Galaxy Note 3 but
                after a month I purchased an XP-PEN Star G640s to replace my Galaxy Note 3. <br />

                Feel free to browse! If you want me to draw something, let me know on the Commissions Request page. Terms and Conditions apply.
            </p>
            <h3>Art Tools</h3>
            <p>Tools that I currently use or have used in the past for digital painting</p>
            <h5>Current tools:</h5>
            <ul class="flex-column">
                <li>Krita</li>
                <li>Xp-Pen Star G640s</li>
            </ul>
            <h5>Discontinued tools:</h5>
            <ul class="flex-column">
                <li>Galaxy Note 3</li>
                <li>VirtualTablet</li>
            </ul>
            <hr class="d-sm-none">
        </div>
        <div class="col-sm-8">
            <h2>Best drawings</h2>
            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-width: 400px; max-height: 50%">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/Commissioned/commission_5.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Commissioned/commission_2.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Random Kittens/random_kitten_6.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Random Kittens/random_kitten_9.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Commissioned/commission_6.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Etc/etc_4.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Etc/etc_8.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Etc/etc_1.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Etc/etc_16.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Etc/etc_8.jpg" />
                    </div>
                </div>
                <!-- Left and right controls-->
                <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
            <br>
            <h2>Contact Me</h2>
            <h5>If you want to ask me something besides commissions, feel free to contact me here</h5>
            <form asp-action="MessageReceived" method="post">
                <label asp-for="name">Name: </label> <br /> <input asp-for="name" type="text" required />
                <br />

                <label asp-for="email">Email: </label> <br /> <input asp-for="email" type="email" required />
                <br />

                <label asp-for="message">Message: </label> <br />
                <textarea asp-for="message" class="form-control" rows="3" cols="9" style="resize:none; max-width: 500px" id="comment" required></textarea>

                <br />

                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <br />
</div>